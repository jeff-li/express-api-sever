{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "prettier"
  ],
  "rules": {
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "semi": 0,
    "radix": ["error", "as-needed"],
    "camelcase": [
      "off", 
      { "properties": "never", "ignoreDestructuring": true }
    ],
    "no-unused-vars": [
      "error", 
      { "argsIgnorePattern": "Sequelize|queryInterface|next" }
    ]

  }
}
